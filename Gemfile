source 'https://rubygems.org'
ruby '2.0.0'

gem 'rails', '4.0.0'

group :development, :test do
  gem 'sqlite3'
end

group :production do
  gem 'pg'
end

gem 'randumb'

gem "haml-rails"
gem 'sass-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'turbolinks'

gem 'jbuilder', '~> 1.2'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end


group :test do
  gem 'guard-cucumber'
  gem 'guard-rspec'
  gem 'factory_girl_rails'
  gem 'cucumber-rails', :require => false
  gem 'rspec-rails'
  gem 'database_cleaner' 
end

gem 'newrelic_rpm'

